{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "apollo-cache-inmemory": "^1.1.5",
    "apollo-client": "^2.2.0",
    "apollo-link-context": "^1.0.3",
    "apollo-link-http": "^1.3.2",
    "graphql": "^0.12.3",
    "graphql-tag": "^2.6.1",
    "react": "^16.2.0",
    "react-apollo": "^2.0.4",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts-ts": "2.8.0"
  },
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "geenrate-graphql-schema": "wget -O schema.json http://localhost:8000/schema",
    "generate-graphql-types": "apollo-codegen generate **/*.graphql --schema schema.json --target ts --output src/schema.ts;rm schema.json",
    "generate-graphql-documents": "cd ./src; graphql-document-collector **/*.graphql > documents.json",
    "prep-types": "yarn geenrate-graphql-schema | yarn generate-graphql-types"

  },
  "devDependencies": {
    "@types/graphql": "^0.11.8",
    "@types/jest": "^22.0.1",
    "@types/node": "^9.3.0",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/react-router-dom": "^4.2.3"
  }
}
